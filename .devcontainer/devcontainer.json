// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"containerEnv": {
		"FLASK_APP": "index",
		"APP_SETTINGS": "config.DevelopmentConfig"
	},
	"name": "Millionaire",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.8-bullseye",
	//"build": { "dockerfile": "Dockerfile" },
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": [5000],
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.vscode-pylance",
				"ms-python.python"
			]
		}
	},

	// Use 'postCreateCommand' to run commands after the container is created.
	//"postCreateCommand": "pip install --trusted-host pypi.org --trusted-host pypi.python.org --trusted-host files.pythonhosted.org -r requirements.txt && export APP_SETTINGS='config.DevelopmentConfig' && export FLASK_APP=index"
	"postCreateCommand": "chmod +x .devcontainer/setup.sh && sh .devcontainer/setup.sh"

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
